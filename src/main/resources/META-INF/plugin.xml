<idea-plugin>
    <id>com.xiaxiayige.okflutter</id>
    <name>OK,Flutter</name>
    <vendor email="xiaxiayige@163.com" url="https://www.github.com/xiaxiayige">xiaxiayige</vendor>

    <description><![CDATA[
    OK,Flutter , quickly find and add Flutter dependencies(data source from <a href='https://pub.dev/'>https://pub.dev/</a>),
    Idea comes from okGradle plugin.more info see(<a href='https://github.com/xiaxiayige/okFlutter'>GitHub</a>)<br/>

    1.input keyworld and click search button<br/>

    2. wait search result.<br/>

    3.click 'copy dependencies' button<br/>

    4.goto  'pubspec.yaml' Paste<br/>

    5.final execution 'pub get'<br/>

    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!--    <depends>com.intellij.modules.platform</depends>-->
    <depends>org.jetbrains.android</depends>

    <depends>com.intellij.modules.androidstudio</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.xiaxiayige.okflutter" class="com.xiaxiayige.okflutter.MainAction" text="OK,Flutter"
                description="OK,Flutter">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>